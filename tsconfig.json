{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "lib": ["ESNext"],
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "dist/",
    "rootDir": "src",
    "outDir": "dist/src"
  },
  "typeRoots": ["./typings", "./node_modules/@types"],
  "include": ["src/**/*.ts", "typings/**/*.ts"]
}
